@model GaragePortal.Razor.Models.CustomerDTO
@{
    ViewData["Title"] = "Login";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["Success"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="login-container">
    <h1>Login</h1>
    
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
    }

    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="mb-3">
            <input asp-for="ClientEmail" class="form-control" placeholder="Email" />
            <span asp-validation-for="ClientEmail" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <input asp-for="ClientPassword" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="ClientPassword" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
